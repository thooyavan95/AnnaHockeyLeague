<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/PT_row_team_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PT_row_team_name"
        app:layout_constraintStart_toEndOf="@+id/PT_row_position"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PT_row_win"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PT_row_loss"
        app:layout_constraintStart_toEndOf="@+id/PT_row_matches_played"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PT_row_loss"
        android:layout_width="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PT_row_draw"
        app:layout_constraintStart_toEndOf="@+id/PT_row_win"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PT_row_draw"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PT_row_goalDiff"
        app:layout_constraintStart_toEndOf="@+id/PT_row_loss"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PT_row_goalDiff"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PT_row_points"
        app:layout_constraintStart_toEndOf="@+id/PT_row_draw"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PT_row_points"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorBlack"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/PT_row_goalDiff"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PT_row_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PT_row_team_logo"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
         />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PT_row_team_name"
        android:layout_width="36dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PT_row_matches_played"
        app:layout_constraintStart_toEndOf="@+id/PT_row_team_logo"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/PT_row_matches_played"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="textEnd"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/PT_row_win"
        app:layout_constraintStart_toEndOf="@+id/PT_row_team_name"/>

</androidx.constraintlayout.widget.ConstraintLayout>