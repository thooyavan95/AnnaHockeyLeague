<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="12dp"
    android:background="#FFFFFF"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <View
            android:id="@+id/shimmer_fixture_team1"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:background="@color/colorWhisper"
            app:layout_constraintEnd_toStartOf="@+id/shimmer_fixture_team1_score"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/shimmer_fixture_team1_score"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@color/colorWhisper"
            app:layout_constraintBottom_toBottomOf="@+id/shimmer_fixture_team1"
            app:layout_constraintEnd_toStartOf="@+id/shimmer_fixture_team2_score"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/shimmer_fixture_team1"
            app:layout_constraintTop_toTopOf="@+id/shimmer_fixture_team1" />

        <View
            android:id="@+id/shimmer_fixture_team2_score"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="@color/colorWhisper"
            app:layout_constraintBottom_toBottomOf="@+id/shimmer_fixture_team2"
            app:layout_constraintEnd_toStartOf="@+id/shimmer_fixture_team2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/shimmer_fixture_team1_score"
            app:layout_constraintTop_toTopOf="@+id/shimmer_fixture_team2" />

        <View
            android:id="@+id/shimmer_fixture_team2"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:background="@color/colorWhisper"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/shimmer_fixture_team2_score"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/shimmer_fixture_team1_name"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="@color/colorWhisper"
            android:layout_marginVertical="12dp"
            app:layout_constraintEnd_toEndOf="@+id/shimmer_fixture_team1"
            app:layout_constraintStart_toStartOf="@+id/shimmer_fixture_team1"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_fixture_team1" />

        <View
            android:id="@+id/shimmer_fixture_team2_name"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:background="@color/colorWhisper"
            android:layout_marginVertical="12dp"
            app:layout_constraintEnd_toEndOf="@+id/shimmer_fixture_team2"
            app:layout_constraintStart_toStartOf="@+id/shimmer_fixture_team2"
            app:layout_constraintTop_toBottomOf="@+id/shimmer_fixture_team2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.facebook.shimmer.ShimmerFrameLayout>